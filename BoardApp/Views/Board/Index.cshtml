</section>










<!--Handlebars 템플릿-->
<script id="tr-template" type="text/x-handlebars-template">
    {{#each list}}
    <tr>
        <td scope="row">{{RowNo}}</td>
        <td class="listTitle" data-no='{{BoardNo}}'>
            <a href="/Board/Detail?boardNo={{BoardNo}}"><span>{{BoardTitle}}</span></a>

        </td>
        <td>{{BoardWriter}}</td>
        <td>{{CreatedDateString}}</td>
        <td>{{ViewCount}}</td>
    </tr>
    {{/each}}
</script>